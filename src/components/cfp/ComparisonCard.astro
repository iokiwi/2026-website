---
interface Props {
  title: string;
  icon?: string;
}

const { title, icon } = Astro.props;
---

<div class="lg:w-1/2 w-full space-y-10 bg-white p-10 fadeInUp">
  <div class="flex items-center gap-3">
    {icon && <img src={icon} alt="" class="w-10 h-10 shrink-0 pt-0!" />}
    <h3 class="text-3xl" style="margin-top:0;">{title}</h3>
  </div>
  <slot />
</div>
