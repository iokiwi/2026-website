---
import FAQCategory from "../../components/attend/faq/FAQCategory.astro";
import FAQEntry from "../../components/attend/faq/FAQEntry.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import HeaderBreadcrumbs from "../../components/header/HeaderBreadcrumbs.astro";
import HeaderStar from "../../components/header/HeaderStar.astro";
import NewsItemsWidget from "../../components/NewsItemsWidget.astro";
import NewsPostCard from "../../components/NewsPostCard.astro";
import Deadline from "../../components/Deadline.astro";
import ConnectSubscribeGetInTouchCards from "../../components/ConnectSubscribeGetInTouchCards.astro";
import Base from "../../layouts/Base.astro";
import CfpNav from "../../components/cfp/CfpNav.astro";
import WorkshopCard from "../../components/cfp/WorkshopCard.astro";
import { workshops } from "../../data/workshops";

const PRETALX_URL = "https://pretalx.com/pycon-au-2026/cfp/";
---

<Base title="Call For Proposals">
  <Header dark={true} />

  <section class="bg-charcoal pt-[98px] pb-20 overflow-hidden">
    <div class="container relative">
      <HeaderStar colour="lemon" />

      <div class="lg:w-[85%] w-full mx-auto">
        <HeaderBreadcrumbs colour="lemon" />
        <div
          class="flex flex-col lg:flex-row justify-between items-center relative pt-10"
        >
          <div class="space-y-20 lg:w-[45%] w-full relative fadeInUp">
            <div
              class="font-serif text-8xl text-[3.625rem] -tracking-[0.022em]"
            >
              <h1 class="text-white">
                <span class="text-lemon">Speak</span>  at  </br>PyCon AU
              </h1>
            </div>
            <p
              class="hidden lg:block text-stone font-sans font-base tracking-[0.01em] leading-normal lg:w-[454px]"
            >
              We’re looking for talks on everything Python, open source, and tech-related. If it would be of interest to someone, anyone, in the Python community, it’s of interest to us!

            </p>
            <img
              src="/images/star-lemon.svg"
              class="spin absolute -right-10 bottom-0 hidden lg:block"
              alt=""
            />
          </div>
          <div class="lg:w-1/2 w-full fadeInUp">
            <div class="group flex justify-end relative">
              <img
                src="/images/cfp/speaking_5_square.jpg"
                alt="pycon"
                class="lg:pb-0 pb-14 rounded-4xl max-h-96"
              />
              <!-- <img src="/images/about-banner.png" class="w-[408px] mx-auto group-hover:visible invisible group-hover:opacity-100 opacity-0 transition-all duration-300" alt="About Banner"> -->
            </div>
            <p
              class="lg:hidden block text-stone font-sans font-base tracking-[0.01em] leading-normal lg:w-[454px]"
            >
              We’re looking for talks on everything Python, open source, and tech-related. If it would be of interest to someone, anyone, in the Python community, it’s of interest to us!
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="header-divider"></div>

    <div class="bg-stone pt-20">
      <div class="container">
        <div class="lg:w-[85%] w-full mx-auto">
          <div
            class="fadeInUp flex flex-col lg:flex-row gap-y-10 lg:gap-y-0 justify-between items-start"
          >
            <div class="rich-text">
              <h2>Call For Proposals</h2>
              <p class="text-intro font-medium w-full text-charcoal lg:w-[570px]">
                The PyCon AU call for proposals (CFP) is open from <strong>1&nbsp;February&nbsp;2026</strong> until <strong>29&nbsp;March&nbsp;2026</strong>, anywhere on earth (<a href="https://www.timeanddate.com/time/zones/aoe" target="_blank">AOE</a>). You can submit to the main conference and specialist tracks through the same process.
              </p>
              <p class="text-intro mt-0! font-medium w-full text-charcoal lg:w-[570px]">
                Submit your proposal today via 
                <a
                  href={PRETALX_URL}
                  target="_blank"
                  class="text-violet no-underline!"
                >Pretalx</a>.
              </p>
              <Deadline deadline="2026-03-29T23:59:59-12:00" countdown={true}>
                <div class="flex">
                  <a
                    href={PRETALX_URL}
                    target="_blank"
                    class="btn-arrow btn-arrow--violet text-stone! no-underline!"
                    >Submit your proposal today</a
                  >
                </div>
              </Deadline>
            </div>
            <div class="mt-10">
              <CfpNav />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="bg-stone pt-10 pb-20">
      <div class="container">
        <div class="lg:w-[85%] w-full mx-auto ">
          <div class="rich-text pb-10">
            <h2>Read the announcement</h2>
          </div>
          <NewsPostCard slug="call-for-proposals-now-open" highlight={true} featured={false} />
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="bg-stone pt-10 pb-20">
      <div class="container">
        <div class="lg:w-[85%] w-full mx-auto">
          <div class="rich-text pb-10">
            <div class="flex flex-wrap items-baseline justify-between gap-4 mb-4">
              <h2 class="mb-0!">Attend a CFP workshop</h2>
              <a href="/cfp/workshops" class="btn px-3 py-3 btn--lavender text-white! no-underline!">Learn more</a>
            </div>
            <p class="text-intro font-medium w-full text-charcoal lg:w-[850px]">
              CFP workshops are free to attend and can help you plan your talk proposal to PyCon AU 2026. Workshops are held both in-person and online with the support of local communities around Australia.
            </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
            {workshops.map((workshop) => (
              <WorkshopCard
                location={workshop.location}
                date={workshop.date}
                description={workshop.description}
                time={workshop.time}
                rsvpUrl={workshop.rsvpUrl}
              />
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>



  <section
    id="custom-bg"
    class="pt-20 relative after:content-[''] after:absolute after:z-10 after:top-[25%] after:left-0 after:w-full after:h-full after:bg-[url('/images/bg-pattern.svg')] after:bg-cover after:bg-center after:bg-no-repeat"
  >
    <div class="container relative z-20">
      <div class="grid lg:grid-cols-3 grid-cols-1 gap-5">
        <a
          href="/about/the-conference"
          class="fadeInUp rounded-t-[3.125rem] block overflow-hidden group hover:rounded-b-[3.125rem] transition-all duration-300"
        >
          <div class="bg-violet">
            <img
              src="/images/about-thumb-1.png"
              class="rounded-b-[3.125rem]"
              alt="thumbnail"
            />
          </div>
          <div
            class="flex items-center justify-between pt-5 pb-7 px-7 bg-violet group-hover:px-10 transition-all duration-300"
          >
            <h3 class="text-2xl font-sans font-medium text-white">
              The Conference
            </h3>
            <svg
              class="fill-white"
              xmlns="http://www.w3.org/2000/svg"
              xmlns:xlink="http://www.w3.org/1999/xlink"
              width="48.229"
              height="29.772"
              viewBox="0 0 48.229 29.772"
            >
              <defs>
                <clipPath id="a">
                  <rect
                    width="48.229"
                    height="29.772"
                    fill="none"
                    stroke="#fff"
                    stroke-width="3"></rect>
                </clipPath>
              </defs>
              <g clip-path="url(#a)">
                <path
                  d="M45.469,1.5H0v-3H45.469Z"
                  transform="translate(0 14.886)"
                  fill="#fff"></path>
                <path
                  d="M26.347,29.772h-3a16.4,16.4,0,0,1,9.528-14.887,16.328,16.328,0,0,1-4.728-3.3,16.328,16.328,0,0,1-3.511-5.208A16.284,16.284,0,0,1,23.347,0h3a13.3,13.3,0,0,0,3.92,9.465,13.3,13.3,0,0,0,9.465,3.92v3A13.385,13.385,0,0,0,26.347,29.772Z"
                  transform="translate(8.497 0.001)"></path>
              </g>
            </svg>
          </div>
        </a>
        <a
          href="/about/culture-and-community"
          class="fadeInUp lg:translate-y-10! rounded-t-[3.125rem] block overflow-hidden group hover:rounded-b-[3.125rem] transition-all duration-300"
        >
          <div class="bg-lavender">
            <img
              src="/images/about-thumb-2.png"
              class="rounded-b-[3.125rem]"
              alt="thumbnail"
            />
          </div>
          <div
            class="flex items-center justify-between pt-5 pb-7 px-7 bg-lavender group-hover:px-10 transition-all duration-300"
          >
            <h3 class="text-2xl font-sans font-medium text-white">
              Culture & Community
            </h3>
            <svg
              class="fill-white"
              xmlns="http://www.w3.org/2000/svg"
              xmlns:xlink="http://www.w3.org/1999/xlink"
              width="48.229"
              height="29.772"
              viewBox="0 0 48.229 29.772"
            >
              <defs>
                <clipPath id="a">
                  <rect
                    width="48.229"
                    height="29.772"
                    fill="none"
                    stroke="#fff"
                    stroke-width="3"></rect>
                </clipPath>
              </defs>
              <g clip-path="url(#a)">
                <path
                  d="M45.469,1.5H0v-3H45.469Z"
                  transform="translate(0 14.886)"
                  fill="#fff"></path>
                <path
                  d="M26.347,29.772h-3a16.4,16.4,0,0,1,9.528-14.887,16.328,16.328,0,0,1-4.728-3.3,16.328,16.328,0,0,1-3.511-5.208A16.284,16.284,0,0,1,23.347,0h3a13.3,13.3,0,0,0,3.92,9.465,13.3,13.3,0,0,0,9.465,3.92v3A13.385,13.385,0,0,0,26.347,29.772Z"
                  transform="translate(8.497 0.001)"></path>
              </g>
            </svg>
          </div>
        </a>
        <a
          href="/about/our-team"
          class="fadeInUp rounded-t-[3.125rem] block overflow-hidden group hover:rounded-b-[3.125rem] transition-all duration-300"
        >
          <div class="bg-violet">
            <img
              src="/images/about-thumb-3.png"
              class="rounded-b-[3.125rem]"
              alt="thumbnail"
            />
          </div>
          <div
            class="flex items-center justify-between pt-5 pb-7 px-7 bg-violet group-hover:px-10 transition-all duration-300"
          >
            <h3 class="text-2xl font-sans font-medium text-white">Our Team</h3>
            <svg
              class="fill-white"
              xmlns="http://www.w3.org/2000/svg"
              xmlns:xlink="http://www.w3.org/1999/xlink"
              width="48.229"
              height="29.772"
              viewBox="0 0 48.229 29.772"
            >
              <defs>
                <clipPath id="a">
                  <rect
                    width="48.229"
                    height="29.772"
                    fill="none"
                    stroke="#fff"
                    stroke-width="3"></rect>
                </clipPath>
              </defs>
              <g clip-path="url(#a)">
                <path
                  d="M45.469,1.5H0v-3H45.469Z"
                  transform="translate(0 14.886)"
                  fill="#fff"></path>
                <path
                  d="M26.347,29.772h-3a16.4,16.4,0,0,1,9.528-14.887,16.328,16.328,0,0,1-4.728-3.3,16.328,16.328,0,0,1-3.511-5.208A16.284,16.284,0,0,1,23.347,0h3a13.3,13.3,0,0,0,3.92,9.465,13.3,13.3,0,0,0,9.465,3.92v3A13.385,13.385,0,0,0,26.347,29.772Z"
                  transform="translate(8.497 0.001)"></path>
              </g>
            </svg>
          </div>
        </a>
      </div>

      <div class="fadeInUp grid lg:grid-cols-2 grid-cols-1 gap-5 pt-32">
        <a href="/attend/" class="btn-arrow btn-arrow--emerald btn-arrow--2col"
          ><span>Attendee Guide</span></a
        >
        <a
          href="/conduct"
          class="btn-arrow btn-arrow--emerald btn-arrow--2col"
          ><span>Code of Conduct</span></a
        >
      </div>
    </div>
  </section>

  <NewsItemsWidget />

  <section class="bg-[#313131]">
    <div class="footer-divider"></div>
    <div class="container">
      <ConnectSubscribeGetInTouchCards />
    </div>
  </section>

  <Footer />

  <!-- Main scripts (will be added in Phase 5) -->
  <script src="/src/scripts/animations.js"></script>
</Base>
